{
  "name": "InfraGuard Dev Container",
  "build": {
    "dockerfile": "../docker/Dockerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "containerEnv": {
    "PYTHONPATH": "/workspaces/InfraGuard"
  },
  "remoteUser": "root"
}